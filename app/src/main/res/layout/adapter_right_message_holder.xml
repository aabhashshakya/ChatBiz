<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="100dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/right_message_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="11dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/right_message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/sentmessagecolor"
                android:padding="7dp"
                android:textColor="@color/white"
                android:textSize="19.5sp"

                tools:text="jhhdfff" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/right_image_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="11dp"

            >

            <ImageView
                android:id="@+id/right_image_view"
                android:layout_width="140dp"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                tools:src="@color/red"
                android:contentDescription="@string/image_message_sent"/>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/right_seen_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />

    </LinearLayout>
</RelativeLayout>

